import os

# Define the folder structure
folders = [
    "code",
    "data/raw",
    "data/processed",
    "data/external",
    "docs",
    "docs/images",
    "results/figures",
    "results/metrics",
    "results/logs",
    "tests",
    "notebooks",
    "scripts"
]

# Create the folders
for folder in folders:
    os.makedirs(folder, exist_ok=True)

print("Folder structure created!")
